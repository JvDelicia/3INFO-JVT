<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.aplicativo01.AgeActivity">

    <EditText
        android:id="@+id/edT_idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Idade"
        android:inputType="number"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="52dp" />

    <Button
        android:id="@+id/btn_definir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calcular"
        android:text="Mostrar Faixa Etária"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="118dp" />

    <TextView
        android:id="@+id/txV_faixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faixa Etária"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="194dp" />

    <TextView
        android:id="@+id/txV_mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[mensagem]"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="376dp" />
</android.support.constraint.ConstraintLayout>
