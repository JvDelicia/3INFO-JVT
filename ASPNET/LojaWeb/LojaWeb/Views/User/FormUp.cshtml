@{
	ViewBag.Title = "User Update";
}

<center><h3>Update an User in the system</h3></center>

<form action="/User/Update" method="POST">
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label for="id">ID</label>
            <input type="number" class="form-control disabled" name="u.Id" id="id" value="@ViewBag.UserId.Id" placeholder="Type the ID" required oninvalid="this.setCustomValidity('You need to type an ID')" oninput="this.setCustomValidity('')">
        </div>
        <div class="col-md-4 mb-3">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="u.Name" value="@ViewBag.UserId.Name" placeholder="Type the Name" required oninvalid="this.setCustomValidity('You need to type the new Username')" oninput="this.setCustomValidity('')">
        </div>
        <div class="col-md-4 mb-3">
            <label for="pass">Password</label>
            <input type="password" class="form-control" id="pass" name="u.Pass" maxlength="8" value="@ViewBag.UserId.Pass" placeholder="Type the Password" required oninvalid="this.setCustomValidity('You need to type the new Password')" oninput="this.setCustomValidity('')">
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label for="Phone">Phone</label>
            <input type="number" class="form-control" name="u.Phone" id="phone" value="@ViewBag.UserId.Phone" placeholder="Type the Phone" required oninvalid="this.setCustomValidity('You need to type the new Phone number')" oninput="this.setCustomValidity('')">
        </div>
        <div class="col-md-4 mb-3">
            <label for="Email">E-Mail</label>
            <input type="email" class="form-control" id="email" name="u.Email" value="@ViewBag.UserId.Email" placeholder="Type the E-Mail" required oninvalid="this.setCustomValidity('You need to type the new E-mail')" oninput="this.setCustomValidity('')">
        </div>
        <div class="col-md-4 mb-3">
            <label for="Born">Born Date</label>
            <input type="date" class="form-control" id="born" name="u.Born" value="@ViewBag.UserId.Pass" placeholder="Type the Born" required oninvalid="this.setCustomValidity('You need to type the new Born Date')" oninput="this.setCustomValidity('')">
        </div>
    </div>
    <button class="btn btn-info container" type="submit" value="Update">Update User</button>
</form>